  <script>
    window.onload = function() {
      // Force a reflow before changes.
      document.body.clientWidth;
      var elems = document.querySelectorAll('[data-content]');
      for (var i = 0; i < elems.length; i++) {
        elems[i].textContent = elems[i].dataset.content;
      }
    };
  </script>
