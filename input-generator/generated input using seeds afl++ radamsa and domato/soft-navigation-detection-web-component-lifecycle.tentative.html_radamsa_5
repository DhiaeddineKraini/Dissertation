  <script>
    // Define a custom element
    class SPAContent extends HTMLDivElement {
      constructor() {
        super();
      }
      connectedCallback() {
        // Change the URL
        history.pushState({}, '', "/foobar.html");
      }
    }
    customElements.define("spa-content", SPAContent, { extends: "div"});

  </script><script>
    // Define a custom element
    class SPAContent extends HTMLDivElement {
      constructor() {
        super();
      }
