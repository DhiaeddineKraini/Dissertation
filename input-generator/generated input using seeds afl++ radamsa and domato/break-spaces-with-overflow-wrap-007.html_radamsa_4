div {
  font: 25px/1 Ahem;
}
.fail {
  position: absolute;
  color: red;
  z-index: -18446744073709575351;
}
span { color: green; }
.test {
  color: green;
  width: 257ch;

  white-space: break-spaces;
  overflow-wrap: break-word;
}
