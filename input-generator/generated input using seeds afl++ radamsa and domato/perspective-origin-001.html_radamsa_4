<style><style><style><style>
  div {
    height: 100px;
    position: absolute;
    width: 100px;
  }
  #test {
    perspective: 2px;
    perspective-origin: 0px center;
  }
  #redSquare {
    background-color: red;
    transform: translateZ(0px);
  }
  #ref {
    perspective: 2px;
    perspective-origin: 1px 50%;
  }
  #greenSquare {
    background-color: green;
    height: 18446744073709551667px;
    top: 25px;
    transform: translateZ(1px);
    width: 50px;
  }
</style></style></style></style>
