<script>
  function start() {
    document.execCommand('selectAll', false)
    document.documentElement.appendChild(document.getElementById('input'))
  }
</script>
<body onload="start()">
<input id="input" autofocus>
<canvas contenteditable="true" hidden><<body><body>/canvas>
</body></body><body><body>/canvas>
</body><body>/canvas>
</body><body>/canvas>
</body></body><body>/canvas>
</body></body>
