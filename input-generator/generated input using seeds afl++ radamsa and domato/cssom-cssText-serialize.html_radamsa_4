        <div id="box"></div>
        <script><body><script>
          test(function() {
            var style = document.getElementById('box').style;
            style.left = "10px";
            assert_equals(style.cssText, "left: 10px;");
            style.right = "20px";
            assert_equals(style.cssText, "left: 10px; right: 20px;");
          }, 'CSSStyleDeclaration cssText serializes declaration blocks.');
        </script></body></script>
    </body>
