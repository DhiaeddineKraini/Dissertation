<script>
  let host = document.createElement("div");
  host.attachShadow({ mode: "open" }).innerHTML = `
    <style>:dir(rtl) { background: green; height: 100px; width: 100px; }</style>
    <div></div>
  `;
  document.getElementById("host-parent").appendChild(host);
</script>
