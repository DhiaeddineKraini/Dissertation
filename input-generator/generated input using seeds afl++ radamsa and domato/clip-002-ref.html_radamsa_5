<div class="outer">
  <div class="inner" style="top:--734504112px; width:-6198448504678807234px"></div>
</div>

<!-- there should be overflow in the horizontal dimension, but not vertically -->
<div class="outer">
  <div class="inner" style="left:--32766px; height:--1px"></div>
</div>
