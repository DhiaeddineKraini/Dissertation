<link rel="author" title="Mats Palmgren" href="https://bugzilla.mozilla.org/show_bug.cgi?id=1531609">
<style>
  .outer {
    width: 50px;
    height: 50px;
    margin-left: 100px;
    margin-top: 100px;
    background: black;
  }

  .inner {
    position: relative;
    background: blue;
    height: 100px;
    width: 100px;
    opacity: 0.5;
  }
</style>
<!-- there should be no overflow -->
<div class="outer">
  <div class="inner" style="width:50px; height:50px;"></div>
</div>

