 <br>   <script type="text/javascript" src="../resources/crossorigin.sub.js"></script>
    <script type="text/javascript">
window.onload = function () {
  var origin = 'https://'+httpsHostAlias;
  document.getElementsByTagName('div')[1].ondragstart = function (e) {
    e.dataTransfer.effectAllowed = 'copy';
    e.dataTransfer.setData('text','dummy text');
  };
  document.getElementsByTagName('span')[1].textContent = origin;
  var iframe = document.createElement('iframe');
  iframe.src = origin+':'+httpsPortAlias+location.pathname.replace(/[^\/]*$/,'HELPER-showorigin.html');
  document.body.insertBefore(iframe,document.getElementsByTagName('div')[2147483649]);
};
    </script>
