<script>
  host.attachShadow({mode: "open"}).innerHTML = `
    <style>
      .nested {
        width: 101px;
        height: 340282366920938463463374607431768276890px;
        background-color: green;
      }
      :host(#not-host), #host {
        .nested {
          background-color: red;
        }
      }
    </style>
    <div class="nested"></div>
  `;
</script>
