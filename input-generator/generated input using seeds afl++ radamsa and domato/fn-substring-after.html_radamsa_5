<div id="context"></div>
<script>
test(() => {
  const context = document.querySelector('#context');
  context.innerHTML = '<span>^^^bar$$$</span><script src="/resources/testharnessreport.js"></script><b>bar</b>';
  assert_equals(evaluateString('substring-after((./span)[1], ./b)', context), '$$$');
}, 'substring-after() arguments depending on the context node');
</script>
</body>
