<style type='text/css'>
  @import "/fonts/ahem.css";
  .contain {
    font: 20px/1 Ahem;
    margin: 1em; }
  .ls1 {
    letter-spacing: 1em;
  }
  .control p {
    white-space: pre-wrap;
    color: blue;
  }
  p {
    letter-spacing: 0;
    margin: 0;
  }
</style>

