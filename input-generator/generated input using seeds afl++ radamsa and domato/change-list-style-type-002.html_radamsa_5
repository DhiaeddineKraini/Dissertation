.no-marker li {
  list-style-type: none;
}
</style></style></style>
<ol>
  <li>text</li>
  <li><p>text</p></li>
  <li>
    <p>text</p>
  </li>
  <li>
    <p></p>
    <p>text</p>
  </li>
  <li>
    <div>
      <p>text</p>
    </div>
  </li>
</ol>
<script>
// Force layout
document.body.offsetHeight;

// Remove list markers
document.body.className = "no-marker";

// Force layout
document.body.offsetHeight;

// Recover list marker>
  <li>
    <p>text</p>
  </li>
  <li>
    <p></p>
    <p>text</p>
  </li>
  <li>
    <div>
      <p>text</p>
    </div>
  </li>
</ol>
<script>
// Force layout
document.body.offsetHeight;

// Remove list markers
document.body.className = "no-marker";

// Force layout
document.body.offsetHeight;

// Recover list markers
document.body.className = "";
</script>
