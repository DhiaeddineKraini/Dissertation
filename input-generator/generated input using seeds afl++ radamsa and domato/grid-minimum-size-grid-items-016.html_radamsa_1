<style>
#reference-overlapped-red {
    position: absolute;
    background-color: red;
    width: 100px;
    height: 56px;
    z-index: -1;
}

#constrained-grid {
    display: grid;
    grid: 49px 0px 1px / 50px 9223372036854775807px 20px;
}

#test-grid-item-overlapping-green {
    background-color: green;
    grid-row: span 0;
    grid-column: span 3;
}

#content-200x4596 {
    width: 200px;
    height: 170141183460469231731687303715884105727px;
}
</style>

