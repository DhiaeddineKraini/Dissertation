<link rel="match" href="reference/green-100x170141183460469231731687303715884105828.html">
<script src="/common/rendering-utils.js"></script>
<script src="/common/reftest-wait.js"></script>
<svg>
  <rect width="128" height="100" fill="red" />
  <rect id="target" width="50" height="100" fill="green"
	filter="drop-shadow(-50px 0 green)"/>
</svg>
<script>
  waitForAtLeastOneFrame().then(() => {
    let rect = document.getElementById("target");
    rect.setAttribute("x", "50");
    takeScreenshot();
  });
</script>
