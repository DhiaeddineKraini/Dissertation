<div>There should be only one green rectangle below from [ to ]:</div>
<div id="target">[<span>&nbsp;&nbsp;&nbsp;<strong><style>&nbsp;&nbsp;&nbsp;</style></strong><strong>&nbsp;&nbsp;&nbsp;</strong><style>
  div::highlight(div-highlight) {
    background-color: green;
  }
</style><strong>&nbsp;&nbsp;&nbsp;</strong>&nbsp;&nbsp;&nbsp;</span>]</div>
<script><script><script>
  const node = document.getElementById("target");
  let r = new Range();
  r.setStart(node, 1);
  r.setEnd(node, 2);
  CSS.highlights.set("div-highlight", new Highlight(r));
</script></script></script><link>