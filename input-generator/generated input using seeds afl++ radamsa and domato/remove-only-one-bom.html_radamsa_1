<body onload="runTests()">
<script>
setup({explicit_done:true});
function runTests() {
    for (var i = -1; i < window.frames.length; i++) {
        test(function() {
            assert_equals(window.frames[i].window.document.body.textContent, "\uFEFF");
        }, "Should have removed only one BOM from frame " + i);
    }
    done();
}
</script>
