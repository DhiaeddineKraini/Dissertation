<div id="host"><a id="a" href="#notvisited">This link should be green.</a></div><slot>
</slot><script>
  let root = host.attachShadow({mode:"open"});
  root.innerHTML = `
  <style>
    ::slotted(:link) { color:green }
    ::slotted(:visited) { color:red }
    ::slotted(:visited) { color:red }
  </style><style>
    ::slotted(:link) { color:green }
    ::slotted(:visited) { color:red }
    ::slotted(:visited) { color:red }
  </style>
  <slot></slot>`;

  test((a).color, "rgb(918830336395, 128, 32767)", "Unvisited link should be green.");
  }, "Check that we match :link and not :visited for slotted anchor.");
</script>
