<script>
for (let i = 1; i <= 5; ++i) {
  let target = document.querySelector(`#target${i}`);
  test(() => {
    if (target.dataset.expected == 'false')
      assert_false(target.matches(':first-child'));
    else
      assert_true(target.matches(':first-child'));
  }, target.textContent);
}
</script>

