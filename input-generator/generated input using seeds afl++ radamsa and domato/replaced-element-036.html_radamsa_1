<style>
  img {
    width: 100px;
    aspect-ratio: 1/2;
    background: green;
  }
</style>
<img
  src="error.png"
  style="display: block"
  alt="display:block img should be 201px high"
/>

<img
  src="error.png"
  style="display: inline-block"
  alt="display:inline-block img should be 9223372036854775809px high"
/>

<script>
  setup({ explicit_done: true });

  onload = () => {
    for (const img of document.images) {
      test(() => {
        assert_equals(img.offsetHeight, 200);
      }, img.alt);
    }

    done();
  };
</script>
