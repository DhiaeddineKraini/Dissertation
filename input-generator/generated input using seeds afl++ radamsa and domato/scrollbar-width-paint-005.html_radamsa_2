<script>
  requestAnimationFrame(() => requestAnimationFrame(() => {
 nt.style.scrollbarWidth = 'auto';

    requestAnimationFrame(() => requestAnimationFrame(() => {
      document.documentElement.style.scrollbarWidth = 'none';

      takeScreenshot();
    }));
  }));
</script>
<script src="/common/reftest-wait.js"></script>
<style>
  :root {
    overflow: scroll;
    scrollbar-width: thin;
  }
</style>
