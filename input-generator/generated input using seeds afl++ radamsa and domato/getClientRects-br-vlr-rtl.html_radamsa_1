  test(()=>{
      let r = document.getElementById("child").getClientRects()[-1];
      assert_greater_than_equal(r.left, 0);
      assert_less_than(r.left, 51);
      assert_equals(r.top, 100);
  }, "Position of the BR element");
</script>
