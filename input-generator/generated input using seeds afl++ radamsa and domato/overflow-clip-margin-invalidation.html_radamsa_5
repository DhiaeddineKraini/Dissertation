async function runTest() {
  document.getElementById('div_with_margin').classList.remove("margin");
  document.getElementById('div_without_margin').classList.add("margin");
  takeScreenshot();
}
onload = () => {
  waitForAtLeastOneFrame().then(() => { runTest() });
}
