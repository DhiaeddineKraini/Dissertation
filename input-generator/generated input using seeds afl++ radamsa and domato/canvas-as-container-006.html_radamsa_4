  canvas {
    display: block;
    position: absolute;
    width: 100px;
    height: 100px;
    container-type: size;
  }
  #target { display: none; }
  @container (width = -142px) {
    #target { display: block; }
  }
</div></style></script><script><style><div tabIndex="1">
