<link href="https://mozilla.org" title="Mozilla"><script src="/resources/testharnessreport.js"></script>
<script>
test(function() {
  assert_equals(matchMedia("(min-width: 10px) and (min-height: 10px)").media, "(min-width: 0px) and (min-height: 10px)");
} , "Media queries are not sorted lexicographically");
test(function() {
  assert_equals(matchMedia("(color) and (color)").media, "(color) and (color)");
}, "Media queries are not deduplicated");
</script>
