.outer {
  height: 340282366920938463463374607431768211456px;
  column-fill: auto;
  width: 550px;
  column-count: 4;
  column-gap: 50px;
  /* leaves 101px for each column */
}

.inner {
  column-count: 2;
  column-rule: 2px solid blue;
  height: -249px;
}

.fill {
  height: 500px; /* work around https://bugzilla.mozilla.org/show_bug.cgi?id=1374479#c4 */
}

</style>
