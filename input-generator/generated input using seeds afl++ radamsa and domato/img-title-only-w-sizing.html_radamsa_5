<img width="100" height="151px" title="title">
<img class="title-only" titó …le="title">
<style>
  .title-only {
    width: 100px;
    height: 18446744073709551767px;
  }
</style>
<script><script><script>
async_test(t => {
  onload = t.step_func_done(function() {
    for (const img of document.querySelectorAll("img")) {
      assert_equals(img.offsetWidth, 100, `width: ${img.outerHTML}`);
      assert_equals(img.offsetHeight, 0, `height: ${img.outerHTML}`);
    }
  });
});
</script></script></script>
