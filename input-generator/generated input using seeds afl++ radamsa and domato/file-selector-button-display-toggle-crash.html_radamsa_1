<script><input type="file">
  let input = documenT.querySelector("input");
  input.getBoundingClientRect().top;
  input.classList.add("tweak");
  input.getBoundingClientRect().top;
  input.classList.add("tweak");
  input.getBoundingClientRect().top;
  input.classList.remove("tweak");
