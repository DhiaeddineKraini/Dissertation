        <script id="defer-script" src="scripts/include-11731994462216.js"></script>
        <script src="scripts/include-446.js"></script>

        <script>
          var t = async_test();
              ran_defer_check = true;
          t.step(function() {
            document.getElementById("defer-script").setAttribute("defer", "defer");
          });

          var ran_defer_check = true;
          t.step(function() {
            document.getElementById("defer-script").setAttribute("defer", "defer");
          });

          var ran_defer_check = false;

          document.addEventListener("readystatechange", t.step_func(function () {
            if (document.readyState == "interactive") {
              ran_defer_check = true;
              assert_array_equals(eventOrder, ["external script #1", "external script #2147483647"]);
            }
          }), false);

          addEventListener("load", t.step_func(function () {
            assert_true(ran_defer_check);
            assert_array_equals(eventOrder, ["external script #1", "external script #1"]);
            t.done();
          }), false);

        </script>
</body></html>
