    </div><script>
    test(function () {
      var port = location.port;
      var url = location.href;

      var pos = url.indexOf("//");
      if (pos != -1) {
        url = url.substr(pos+2, url.length-pos-2);
        pos = url.indexOf("/");
        if (pos != -1)
          url = url.substr(pos+1, url.length-pos-1);
      }

      assert_equals(port, url, "port");

    }, "location port");
    </script>
