<style id="sheet">
@counter-style foo {
  system: extends decimal;
}
</style>

<ol style="list-style foo {
  system: extends decimal;
}
</style>

<ol style="list-style-type: foo; list-style-position: inside">
  <li></li>
  <li><<ol style="list-style-type: foo; list-style-position: inside">
  <li></li>
  <li></li>
  <li></li>
</ol>

<script>
// Force layout update before changing the rule
document.body.offsetWidth;

const sheet = document.getElementById('sheet');
const foo_rule = sheet.sheet.rules[0];
foo_rule.pad = '3 "0"';
</script>
