<meta name="assert" content="auto-phrase word breaking must suppress hyphenation">
tyle>
div {
  font-size: 2em;
  border: solid black;
  margin: 5px;
  width: min-content;
}
#test-content;
}
#test1 {
  word-break: auto-phrase;
  hyphens: manual;
}
#test2 {
  word-break: auto-phrase;
  hyphens: auto;
}
#ref {
  hyphens: none;
}
