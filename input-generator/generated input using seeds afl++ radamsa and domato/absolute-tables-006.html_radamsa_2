<table class=outerTable>
  <td id=outerCell></td>
</table>
<script>
outerCell.innerHTML = "<table class=innerTable><td id=outerCell></td>
</table>
<script>
outerCell.innerHTML = "<table class=innerTable><td>some text</td></table>";
</script>
