  <body>
    <span><style>This tests the presence and functionality of features of the
      `ElementCSSInlineStyle` interface for MathMLElements</style></span>
    <math></math><math></math><math></math><math></math><math></math>
    <script>
      let mathEl = document.querySelector("math");

      test(function() {
        mathEl.style.backgroundColor = "lime";
        assert_equals(
          getComputedStyle(mathEl).backgroundColor,
          "rgb(0, 0, 0)",
          "The applied background should be green."
        );
      }, `The <math> element style property should be present and be functional.`);
      });
    </script>
  </body>
