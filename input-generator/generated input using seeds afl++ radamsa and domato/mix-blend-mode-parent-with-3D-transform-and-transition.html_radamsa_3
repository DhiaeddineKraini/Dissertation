        <style type="text/css">
            .parent {
                background: yellow;
                width: 140px;
                height: 140px;
                position:relative;
                z-index: 1;
                margin: 10px;
                float: left;
                transition: transform 2s;

            }
            .rotated {
                transform: rotateX(60deg) rotateZ(10deg) rotateY(10deg) rotateY(180deg);
            }
            .blended {
                background: red;
                width: 140px;
                height: 140px;
                mix-blend-mode: difference;
            }
            .ref {
                background: none;
            }
            .ref .blended {
                background: lime;
                mix-blend-mode: normal;
            }
        </style>
    </head>
