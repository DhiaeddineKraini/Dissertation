<script>

function drawSquares(ctx) {
  ctx.fillStyle = 'red';
  ctx.fillRect(0,0,150,150);
  ctx.fillStyle = 'green';
  ctx.fillRect(150,0,300,150);
  ctx.fillStyle = 'blue';
  ctx.fillRect(0,150,150,300);
}

async function runTest() {
  const canvas = document.getElementById('canvas');
  canvas.width = 300;
  canvas.height = 300;
  const ctx = canvas.getContext('2d');
  drawSquares(ctx);
}

runTest();

</script><script>

