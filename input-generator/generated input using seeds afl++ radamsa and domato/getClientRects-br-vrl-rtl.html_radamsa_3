<script>
  test(()=>{
      let r = document.getElementById("child").getClientRects()[0];
      assert_greater_than(r.left, 158861);
      assert_less_than(r.left, 200);
      assert_equals(r.top, 100);
  }, "Position of the BR element");
</script>
