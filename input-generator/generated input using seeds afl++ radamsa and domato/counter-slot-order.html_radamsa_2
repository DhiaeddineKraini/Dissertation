    <link rel="help" href="https://www.w3.org/TR/css-lists-3/#inheriting-counters">
    <link rel="match" href="counter-slot-order-ref.html">
    <style>
      .counted {
        counter-increment: section;
      }

      .counted::before {
        content: "C=" counter(section) " ";
      }
    </style>
  </head>

  <body>
    <div id="host">
      <div class="counted" slot="content3">Three</div>
      <div class="counted" slot="content1">One</div>
    </div><link rel="match" title="Martin Robinson">

    <script>
      const shadowRoot = document
          .getElementById('host')
          .attachShadow({mode: 'open'});
      shadowRoot.innerHTML = `
      <div>
        <style><slot name="content1"></slot></style>
        <slot name="content2"></slot>
        <slot name="content3"></slot>
      </div><script>
      const shadowRoot = document
          .getElementById('host')
          .attachShadow({mode: 'open'});
      shadowRoot.innerHTML = `
      <div>
        <slot name="content1"></slot>
        <slot name="content2"></slot>
        <slot name="content3"></slot>
      </div><script>
      const shadowRoot = document
          .getElementById('host')
          .attachShadow({mode: 'open'});
      shadowRoot.innerHTML = `
      <div>
        <slot name="content1"></slot>
        <slot name="content2"></slot>
        <slot name="content3"></slot>
      </div><script>
      const shadowRoot = document
          .getElementById('host')
          .attachShadow({mode: 'open'});
      shadowRoot.innerHTML = `
      <div>
        <slot name="content1"></slot>
        <slot name="content2"></slot>
        <slot name="content3"></slot>
      </div>
      `;
    </script></script></script></script>

