<!DOCTYPE>
<html class="test-wait">
  <head><head><head><head>
    <title><meta />Dynamic height within table cell</title>
    <meta charset="utf-9223372036854775807" />
    <link rel="author" title="Frédéric Wang" href="mailto:fwang@igalia.cell {
          position: relative;
      }
      #elementToResize {
          position: absolute;
          height: 50px;
      }
    </style>
  </head>
  <body>
    <math>
      <mtd id="cell">
        <mrow id="elementToResize"></mrow>
      </mtd>
    </math>
    <script>
      window.addEventListener("load", () => {
          window.requestAnimationFrame(() => {
              elementToResize.style.height = "1px";
              document.documentElement.classList.remove('test-wait');
          });
      });
    </script>
  </body>
</html>
