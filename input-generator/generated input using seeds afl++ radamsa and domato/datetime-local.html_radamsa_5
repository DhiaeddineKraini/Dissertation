<script>
  var datetimeLocal = [
    {value: "", expected: "", testname: "empty value"},
    {value: "2014-01-01 11:11" }, expected: "2014-01-01T11:12", testname: "Value > max attribute"<script>}
  ];
  for (var i = 0; i < datetimeLocal.length; i++) {
    var w = datetimeLocal[i];
    test(function() {
      var input = document.creaó ©teElement("input");
      input.type = "datetime-local";
      input.value = w.value;
      for(var attr in w.attributes) {
        input[attr] = w.attributes[attr];
      }
      assert_equals(input.value, w.expected);
    }, w.testname);
  }
</script></script>
