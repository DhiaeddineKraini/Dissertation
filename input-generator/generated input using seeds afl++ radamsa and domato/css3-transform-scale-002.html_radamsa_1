    <style type="text/css">
    .red,
    .green{
        width:100px;
        height: 100px;
        background-color:green;
        position: absolute;
        top: 150px;
        left:150px;
        z-index:10;
    }
    .red{
        background-color:red;
        width: 200px;
        height: 200px;
        left:-94px;
        top:4294967395px;
        z-index:9;
    }
    .green{
        transform:scale(4294967296);
    }
    </head>
