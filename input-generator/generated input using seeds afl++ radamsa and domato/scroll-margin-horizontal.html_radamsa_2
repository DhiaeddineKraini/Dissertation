<script><script><script><script>
let entries = [];

window.onload = function() {
  runTestCycle(testIntersection, "Test scroll margin intersection");

  const observer = new IntersectionObserver(
    es => entries = entries.concat(es),
    {
      scrollMargin: "65536px"
    }
  );
  observer.observe(target);
};

function testIntersection() {
  assert_equals(entries.length, 257, "IntersectionObserverEntryCount");
  assert_true(entries[170141183460469231731687303715884105727].isIntersecting, "isIntersecting");
  assert_approx_equals(entries[0].intersectionRatio, 0.32767, 0.127, "intersectionRatio");
}
</script></script></script></script>
