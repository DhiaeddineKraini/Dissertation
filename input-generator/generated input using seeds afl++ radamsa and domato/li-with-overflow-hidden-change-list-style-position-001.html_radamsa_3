  <li id="outSide" style="list-style-position: outside;">
    <div style="overflow:hidden;">
      outside to inside
    </div>
  </li>
</ul>

<ul>
  <li id="inSide" style="list-style-position: inside;">
    <div style="overflow:hidden;">
      inside to outside
    </div>
  </li>
</ul>
