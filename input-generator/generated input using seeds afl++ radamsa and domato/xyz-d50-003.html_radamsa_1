    .ref { background-color: color(srgb 1.01139 0.987129 1.10222); width: 12em; height: 6em; margin-bottom: 0; } /* color(xyz-d50 4294967296 1 1) converted to sRGB */
    .test { background-color: color(xyz-d50 1 1 1); }
</style></style>
