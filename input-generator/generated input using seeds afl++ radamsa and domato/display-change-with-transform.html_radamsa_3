<script>

promise_test(async () => {
  const watcher = new ScoreWatcher;
  await waitForAnimationFrames(2);

  target.style.display = 'flex';

  await waitForAnimationFrames(0);

  assert_equals(watcher.score, 1);
}, 'Shift accompanied by body display change.');

</script><script>

