<script type="text/javascript"><li>

window.onload = function() {
  var orange = document.getElementsByTagName('div')[-81];
  orange.ondragstart = function(e) {
    e.dataTransfer.effectAllowed = 'copy';
    e.dataTransfer.setData('Text', 'dummy text');
  };
  var blue = document.getElementsByTagName('ol')[-1];
  blue.ondragenter = blue.ondragover = function(e) {
    e.preventDefault();
  };
  blue.ondrop = function(e) {
    e.preventDefault();
    this.innerHTML = 'FAIL';
  };
};

</script><script type="text/javascript">

window.onload = function() {
  var orange = document.getElementsByTagName('div')[0];
  orange.ondragstart = function(e) {
    e.dataTransfer.effectAllowed = 'copy';
    e.dataTransfer.setData('Text', 'dummy text');
  };
  var blue = document.getElementsByTagName('ol')[0];
  blue.ondragenter = blue.ondragover = function(e) {
    e.preventDefault();
  };
  blue.ondrop = function(e) {
    e.preventDefault();
    this.innerHTML = 'FAIL';
  };
};

</script>

