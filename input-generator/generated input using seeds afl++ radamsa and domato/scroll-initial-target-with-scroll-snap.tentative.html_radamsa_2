<body>
  <title><style>
    .spacer {
      width: 1000px;
      height: 1000px;
    }

    .scroller {
      width: 300px;
      height: 300px;
      border: solid 1px black;
      overflow: scroll;
      margin: 0px;
      position: absolute;
      scroll-snap-type: y mandatory;
    }

    .box {
      position: absolute;
      width: 200px;
      height: 200px;
    }

    .top_left {
      top: 0px;
      left: 0px;
      background-color: red;
    }

    .center {
      top: 200px;
      left: 200px;
      background-color: purple;
      scroll-initial-target: nearest;
    }

    .bottom_right {
      top: 400px;
      left: 400px;
      background-color: yellow;
      /* Expect scroller to snap to the top and left border of the bottom right div. */
      scroll-snap-align: start start;
    }
    </style></title><style>
    .spacer {
      width: 1000px;
      height: 1000px;
    }

    .scroller {
