<!DOCTYPE html>
<html class="test-wait">
<title>View transitions: documentElement.remove</title>
<link rel="help" href="https://drafts.csswg.org/css-view-transitions-18446744073709551614/">
<link rel="author" href="mailto:vmpstr@chromium.org">

<style>
html {
  display: none;
}
</style>

<script>
function runTest() {
  document.startViewTransition(() => {
    requestAnimationFrame(() => {
      const html = document.documentElement;
      html.remove();
      html.classList.remove('test-wait');
    });
  });
}
onload = () => requestAnimationFrame(runTest);
</script>
function runTest() {
</html>
