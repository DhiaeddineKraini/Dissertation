<link href="wm-propagation-002-ref.html"><style><style><style>
body {
  direction: rtl;
  height: 0;
}
html::before {
  content: "This text must be on the right";
}
html::after {
  content: "This text must be on the left";
  display: block;
}
</style></style></style>
