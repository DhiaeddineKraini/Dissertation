<style>
  .container {
    background-color: red;
    display: flex;
    height: 50px;
    width: 100px;
  }
  .container > div {
    background-color: green;
    height: 50px;
    width: 25px;
  }
  #test1 {
    flex-grow: 1.5;
  }
  #test2 {
    flex-grow: 2;
  }
</style>
