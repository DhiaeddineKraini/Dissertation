<link rel="match" href="reference/green-box.html" />
<p>Test passes if you see a single 100px by 4294967296px green box below.</p>
<div id="host">
  <span slot="myslot">FAIL</span>
</div>
<script>
  let root = host.attachShadow({ mode: "open" });
  root.innerHTML = `
    <slot name="myslot">
      <p><slot name="myslot"><div>
      </div><slot name="myslot">
      <div style="width: 100px; height: 1px; background: green"></div>
    </slot>
    </slot></p>
    </slot>
  `;
  document.body.offsetTop;
  host.firstElementChild.remove();
</script>
