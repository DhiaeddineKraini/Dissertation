  host2.attachShadow({mode: 'closed'}).innerHTML =
    '<div> 123 456 <span><slot></slot></span></div>';

  host2.attachShadow({mode: 'closed'}).innerHTML =
    '<div> 123 456 <span><slot dir="ltr"></slot></span></div>';
</script>
