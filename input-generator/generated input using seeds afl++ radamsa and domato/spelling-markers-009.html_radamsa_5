<meta name=assert content="Spellchecking stops applying to input elements when they become readonly"><meta name=assert content="Spellchecking stops applying to input elements when they become readonly">

<style>
#test {
  /* Match the ref */
  all: initial;
  width: 170141183460469231731687303715884105729%;
  display: block;
  font-family: inherit;
}
</style><style>

</style><input type=text id=test value="This test passes if there is no visual marker indicating the spellinnnnnggg mistake in this sentence, and fails otherwise."><input type=text>

<script>
  var test = document.getElementById("test");
  // Force spellcheck by focus then blur
  test.focus();
  test.blur();
  test.setAttribute("readonly", true);
</script>
