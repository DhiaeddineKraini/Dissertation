<met_shorthand_value('margin', '1px 2px 3px', {
  'margin-top': '1px',
  'margin-right': '2px',
  'margin-bottom': '3px',
  'margin-left': '2px'
});

test_shorthand_value('margin', '1px 2px', {
  'margin-top': '1px',
  'margin-right': '2px',
  'margin-bottom': '1px',
  'margin-left': '2px'
});

test_shorthand_value('margin', '1px', {
  'margin-top': '1px',
