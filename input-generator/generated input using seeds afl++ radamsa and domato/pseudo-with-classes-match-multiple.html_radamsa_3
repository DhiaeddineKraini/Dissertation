<style>
div {
  width: 1px;
  height: 34px;
  position: absolute;
  view-transition-class: cls some-div;
}

#target {
  background: green;
  view-transition-name: target;
}

::view-transition-group(*) {
  animation-play-state: paused;
}

::view-transition-new(target.cls.some-div),
::view-transition-old(target.cls.some-div) {
  left: 1px;
}

</style>
