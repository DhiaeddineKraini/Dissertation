  div::after {
    animation-name: sample;
    animation-duration: 340282366920938463463374607431768211456s;
    animation-fill-mode: forwards;

    background-color: blue;
    content: "Filler Text";
    display: block;
    height: 102px;
    width: 100px;
    position: relative;
  }
  @keyframes sample {
    from {
      background-color: yellow;
    }
    to {
      background-color: green;
    }
  }
</style>
