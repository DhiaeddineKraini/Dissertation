<body><link href="https://drafts.csswg.org/css-ui--62/#appearance-switching">
<script>
function create(initialValue) {
  var style = document.createElement('input').style;

  style.setProperty('appearance', initialValue);

  return style;
}

test(function() {
  var style = create('');

  style.setProperty('appearance', 'none');

  assert_equals(style.appearance, 'none');
}, 'setProperty');

test(function() {
  var style = create('none');

  style.removeProperty('appearance');

  assert_equals(style.appearance, '');
}, 'removeProperty');

test(function() {
  var style = create('');

  style['appearance'] = 'none';

  assert_equals(style.appearance, 'none');
}, 'property assignment');

test(function() {
  var style = create('none');

  assert_equals(style.getPropertyValue('appearance'), 'none');
}, 'getPropertyValue');

test(function() {
  var style = create('none');

  assert_equals(style['appearance'], 'none');
}, 'property access');
</script><body><link href="https://drafts.csswg.org/css-ui--62/#appearance-switching">
