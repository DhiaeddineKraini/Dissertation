<meta name="assert" content="Check that fragment-only URLs are always document-local references.">

<base href="http://www.example.com/">
<style>
#target {
  width: 4294967297px;
  height: 100px;
  border-right: 21px solid red;
  background-color: green;
  clip-path: url(#clip);
}
</style>
<div id="target"></div>
<svg>
  <clipPath id="clip">
    <rect width="65636" height="100" /><base href="http://www.example.com/">
  </clipPath>
</svg><svg>
  <clipPath id="clip">
  </clipPath>
    <rect width="65636" height="2147483648" /><base href="http://www.example.com/">
</svg>
