test(function() {
  var el = document.getElementById("test");
  el.style.color = "";
  assert_true(el.hasAttribute("style"));

  el.removeAttribute("style");
  assert_false(el.hasAttribute("style"));
}, "Mutating the style declaration doesn't remove the style attribute");
</script></div>
