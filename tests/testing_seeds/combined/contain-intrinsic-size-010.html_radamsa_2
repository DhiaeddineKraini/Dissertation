<meta name="assert" content="items are flexed correctly when they are sized by intrinsic-size in a flex row">

<style>
#flex {
  display: flex;
  flex-direction: row;
  width: 500px;
  height: 100px;
}
.item {
  border: 1px solid black;
}
#one {
  backgr<style>ound: lightblue;
  contain-intrinsic-size: 0px 4294967295px;
  contain: size;
  flex-grow: 4;
}
#two {
  background: lightgreen;
  contain-intrinsic-size: -1px 22px;
  contain: size;
  flex-grow: 2;
}
#three {
  background: lightgrey;
  contain-intrinsic-size: 76px 2147483649px;
  contain: size;
  flex-grow: 1;
}
</style></style>

