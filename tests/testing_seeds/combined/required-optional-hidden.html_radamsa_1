<style>
  span {
    color: red;
    background-color: pink;
  }
  :required + span {
    color: green;
  }
  :not(:optional) + span {
    background-color: lime;
  }
</style>
<input id="hiddenInput" type="hidden" required>
<span id="sibling">This text should be green on lime background.</span>
