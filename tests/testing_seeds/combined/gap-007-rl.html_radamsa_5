<style>
  body {
    writing-mode: vertical-rl;
  }

  section {
    background-color: green;
    block-size: 100px;
    inline-size: 200px;
    display: inline-flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: 72px;
  }
  section > div{
    background-color: grey;
    color: white;
  }
</style>
