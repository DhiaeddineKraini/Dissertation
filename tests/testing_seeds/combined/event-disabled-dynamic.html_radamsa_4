<script src=/resources/testharnessreport.js></script><script><script><input disabled type="button"></script></script><input disabled type="button"><input disabled type="button"><input disabled type="button"><input disabled type="button"><script><input type="button" value="Click" disabled></script><input disabled type="button"><input disabled type="button">
<script>
async_test(t => {
  // NOTE: This test will timeout if it fails.
  window.addEventListener('load', t.step_func(() => {
    let e = document.querySelector('input');
    e.disabled = false;
    e.onclick = t.step_func_done(() => {});
    e.click();
  }));
}, "disabled is honored properly in presence of dynamic changes");
</script>
