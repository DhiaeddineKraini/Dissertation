</html><script>
    try {
      CSS.registerProperty({
        name: '--prop',
        syntax: '<length>',
        initialValue: '0px',
        inherits: true
      });

      outer.style.setProperty('--prop', '13px');

      expectWorkletValue(target, '--prop', '[CSSUnitValue 13px]');
    } catch(e) {
      document.body.textContent = e;
      takeScreenshot();
    }
