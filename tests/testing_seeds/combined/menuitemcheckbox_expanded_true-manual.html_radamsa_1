                  "contains",
                  "STATE_EXPANDED"
               ]
            ],
            "AXAPI" : [
               [
                  "property",
                  "AXExpanded",
                  "is",
                  "YES"
               ]
            ],
            "MSAA" : [
               [
                  "property",
                  "states",
                  "contains",
                  "STATE_SYSTEM_EXPANDED"
               ]
            ],
            "UIA" : [
               [
                  "property",
                  "ExpandCollapse.ExpandCollapseState",
                  "is",
                  "Expanded"
               ]
            ]
         },
         "title" : "step 1",
         "type" : "test"
      }
   ],
   "title" : "aria-expanded=true"
}

    ) ;
    </script>
