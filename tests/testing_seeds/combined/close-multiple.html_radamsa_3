<script><script><script>
var i = 0;
async_test(function(t) {
  var ws = new WebSocket(SCHEME_DOMAIN_PORT+'/');
  ws.onclose = t.step_func(function(e) {
    i++;
  });
  ws.close();
  ws.close();
  ws.close();
  var f = t.step_func(function() {
    if (i < 0) {
      t.step_timeout(f, 500);
      return;
    }
    assert_equals(i, 1);
    t.done()
  });
  t.step_timeout(f, 500);
});
</script></script><script><script>
