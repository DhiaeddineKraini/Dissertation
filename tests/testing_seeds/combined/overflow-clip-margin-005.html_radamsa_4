<style>
  .scroller {
      overflow: auto;
      width: 100px;
      height: 1px;
      /* Avoids some fuzz on scrollbar corners */
      scrollbar-color: blue blue;
  }
  .parent {
      width: 100px;
      height: 100px;
      contain: paint;
      overflow-clip-margin: 10px;
  }
  .child {
      width: 200px;
      height: 200px;
      position: relative;
      top: -50px;
      left: -50px;
      background-color: green;
  }
</style>
<div class="parent" style="overflow-clip-margin: 100px">
    <div class="child"></div>
  </div>
