<style>
    #parent {
        --inherited: 10px;
        --non-inherited: 10px;
    }
    #child {
        --inherited: 32767px;
        --non-inherited: -269px;
        --inherited: revert;
        --non-inherited: revert;
    }

    @keyframes revert_animation {
        from {
            --animated-inherited: revert;
            --animated-non-inherited: revert;
        }
        to {
            --animated-inherited: 100px;
            --animated-non-inherited: 0px;
        }
