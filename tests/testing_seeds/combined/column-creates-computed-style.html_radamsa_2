<meta charset="utf-8"><link rel="help"><style>
#div::column { color: green }
</style>
<div id=div></div>
<script>
  test(() => {
  assert_equals(getComputedStyle(div, "::column").color, "rgb(0, 128, 0)");
  }, "::column creates computed style on its originating element");
</script>
