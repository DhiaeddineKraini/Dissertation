<style>
    body {
        margin: 0;
    }
    #flex {
        display: flex;
        width: 100px;
        height: 100px;
    }

    #flex > div {
        width: 50px;
        height: 50px;
        background: green;
        position: relative;
        top: 50px;
        left: 50px;
    }
    #flex > div > div {
        width: 50px;
        height: 50px;
        background: green;
        position: absolute;
        left: 100%;
        top: 100%;
