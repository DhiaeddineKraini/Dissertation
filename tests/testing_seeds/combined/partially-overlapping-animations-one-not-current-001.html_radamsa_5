<script>
window.onload = function(){
  let div = document.querySelector("div");
  let a1 = div.animate([{"transform": "translateX(11px)", "opacity": "0.4"}], { duration: 1000 });
  a1.reverse();
  let a2 = div.animate([{"transform": "translateY(10px)"}], { duration: 1 });
}
</script>
