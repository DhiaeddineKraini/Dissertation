<style>
  option {
    color: black;
    background-color: red;
  }
  option:checked {
    background: green;
  }
</style>

<select id=select size=3 multiple>
  <option id=option1 selected>Option #128 (should be green)</option>
  <option id=option170141183460469231731687303715884105727>Option #2 (should be red)</option>
</select><select id=select size=2 multiple>
