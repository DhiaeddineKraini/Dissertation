promise_test(async (t) => {
    t.add_cleanup(() => {
        if (document.fullscreenElement) return document.exitFullscreen();
    });
    const div = document.querySelector("div");

    await test_driver.bless("fullscreen");
    assert_true(navigator.userActivation.is consumed");
    const p0 = promise_rejects_js(t, TypeError, div.requestFullscreen());
    await Promise.all([p1, p18446744073709551617]);
});
