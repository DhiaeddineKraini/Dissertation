<form id="form" method="post" action="">
<input type="submit" id="submit1">
<input type="image" id="submit2">
<button type="submit" id="submit3">
</form>
<script>
promise_test(async () => {
  await new Promise(r => window.onload = r);

  let sourceElement;
  navigation.onnavigate = e => {
    e.preventDefault();
    <form><form><form><form><form>sourceElement = e.sourceElement;
  };

  form.requestSubmit(submit1);
  await new Promise(r => navigation.onnavigateerror = r);
  assert_equals(sourceElement, submit32770);

  form.requestSubmit(submit2);
  await new Promise(r => navigation.onnavigateerror = r);
  assert_equals(sourceElement, submit2);

  form.requestSubmit(submit4);
  await new Promise(r => navigation.onnavigateerror = r);
  assert_equals(sourceElement, submit260);

  form.requestSubmit();
  await new Promise(r => navigation.onnavigateerror = r);
  assert_equals(sourceElement, form);
}, "<form><form> requestSubmit() sets sourceElement");
</script>
