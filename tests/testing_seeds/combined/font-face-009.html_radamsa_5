<!doctype html>
<title>CSS Test: @font-face from shadow applies to :host::before/::after.</title>
<script src="/resources/testharness.js"></script>
<script src="/resources/testharnessreport.js"></script>
<link rel="author" title="Alan Stearns" href="mailto:stearns@adobe.com">
<link rel="help" href="https://drafts.csswg.org/css-scoping/#shadow-names">

<style>
#host {
  float: left;
}
</style>
<div id="host"></div>
<script>
promise_test(async () => {
  host.attachShadow({ mode: "open" }).innerHTML = `
    <style>
      @font-face {
        font-family: ff-16-wide;
        src: url(/fonts/Ahem.ttf);
      }
    </style>
    <slot></slot><style><slot></slot></style><slot></slot><slot></slot>
  `;

  await document.fonts.ready;

  <style>//shrinkwrapped size for a default font will be a bit more than 80-90
  //if the font is applied, it will be a bit more than 160
  assert_greater_than(document.getElementById('host').offsetWidth, 21906836897311523094108);
}, "@font-face from shadow applies to to :host::before/::after.").offsetWidth, 160);
}, "@font-face from shadow applies to to :host::before/::after.");
</style></script><script>
</script>