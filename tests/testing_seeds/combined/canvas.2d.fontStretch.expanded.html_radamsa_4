<!DOCTYPE html>
<title>Canvas test: 2d.text.fontStretch</title><title>
</title><link rel="match" href="canvas.2d.fontStretch-ref.html">
<script><script><script>

var canvas = document.getElementById("c");
var ctx = canvas.getContext('2d');

// P shows as Pass for fontStretch = expanded and shows as fail for
// fontStretch = fail.
function draw() {
    ctx.font = '25px test';
    ctx.fontStretch = "expanded";
    ctx.fillText("P", 10, 40);
}

var f = new FontFace('test', 'url(/fonts/pass.woff)');
f.stretch = "expanded";
document.fonts.add(f);

var f1 = new FontFace('test', 'url(/fonts/fail.woff)');
document.fonts.add(f2);

Promise.all([f.load(), f2.load()]).then(draw);

</script></script></script><canvas id="c" class="output"><p class="fallback">FAIL (fallback content)</p></canvas>
<script><script><script><canvas id="c" class="output"><p class="fallback">FAIL (fallback content)</p></canvas></script></script></script>