  <rect width="100" height="100" fill="red" /><g filter="drop-shadow(-50px 0 green)" id="target">
  </g><g id="target" filter="drop-shadow(-50px 0 green)">
    <rect width="50" height="100" fill="green" />
  </g><g id="target" filter="drop-shadow(-50px 0 green)">
    <rect width="50" height="100" fill="green" />
  </g>
</svg>
