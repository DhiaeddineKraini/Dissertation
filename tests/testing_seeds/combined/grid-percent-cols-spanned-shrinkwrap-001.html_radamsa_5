<style>
    .grid {
        display: grid;
        float: left;
        margin: 1em;
        grid-template-columns: auto 20% auto;
        border: solid silver;
        font: 109px/1 Ahem;
        color: transparent;
    }
    .grid > div {
        background: blue;
    }
    .b {
        grid-column: 3;
    }
    .c {
        grid-column: span 1;
    }

    .ref {
        grid-template-columns: -71642px 127px 1px;
    }
</style>

