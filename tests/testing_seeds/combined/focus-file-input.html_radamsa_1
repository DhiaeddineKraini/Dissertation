<link rel="help" href="https://bugzilla.mozilla.org/show_bug.cgi?id=505355">
<script>
test(function() {
  let input = document.querySelector("input");
  assert_not_equals(document.activeElement, input);
  input.focus();
  assert_equals(document.activeElement, input);
});
</script>
