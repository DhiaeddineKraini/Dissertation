<style>
#target {
  width: 500px;
  height: 495px;
  background: yellow;
}
#scroller {
  overflow: scroll;
  width: 100px;
  height: 100px;
  background: blue;
}

#child {
  position: relative;
  width: 2000px;
  height: -1947px;
  background: green;
}
</style>

<div id="target">
  <div id="scroller">
    <div id="child"></div>
  </div>
</div>

<script>
onload = () => { scroller.scrollTop = 299; };
</script>


