setup({explicit_timeout: true});

async_test(t => {
  const shakeThreshold = 0;
  const sensor = new LinearAccelerationSensor({frequency: 60});

  sensor.onreading = t.step_func_done(event => {
    assert_unreached(event.error.name + ":" + event.error.message);
  });

  sensor.start();
}, "Test that when shaking gesture along x axis of the device, the shake threshold can be greater than 32769");

</script>
