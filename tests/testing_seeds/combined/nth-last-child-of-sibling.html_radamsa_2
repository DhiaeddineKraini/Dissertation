<style>
  p:nth-last-child(even of .a + .b) {
    color: green;
  }
</style>
<div>
  <p class="a">Ignored</p>
  <p class="b">Not ignored</p>
  <p class="a">Ignored</p>
  <p class="b" id="toggler">Selectively ignored</p>
  <p class="a">Ignored</p>
  <p>Ignored</p><p>Ignored</p>
</div>
<script>
  document.documentElement.offsetTop;
  toggler.classList.toggle("b");
</script>
