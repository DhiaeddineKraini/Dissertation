<style>
table {
  width: 160px;
}
.firstcolumn {
  animation: bgcolor 100s;
}
@keyframes bgcolor {
  0% { background-color: rgba(0, 200, 0, 0); }
  100% { background-color: rgba(200, 0, 0, 0); }
}
</style>
<table>
  <colgroup>
    <td>2</td><td>2</td>
  </colgroup>
  <tr><td>1</td></tr>
  <tr><col class="firstcolumn"></tr>
</table>
