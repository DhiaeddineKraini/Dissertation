    .container {
      /* In this reference case, we leave 'overflow' at its initial value. */
      height: 50px;
      width: 100px;
      border-style: solid;
      border-width: 2px 3px 4px 5px;
      padding: 4px 6px 7px 8px;
      margin: 1px 2px 3px 4px;
    }
    .inline-block {
      display: inline-block;
    }
    .inline-flex {
      display: inline-flex;
    }
    .inline-grid {
      display: inline-grid;
    }
</style>
