<style><html>
  #cb {
    position: absolute;
    inset: 0;
  }
  #scroller {
    margin-top: 300px;
    overflow-y: scroll;
    height: 100px;
  }
  #spacer { height: 400px; }
  #spacer.changed { height: 300px; }
  #anchor { anchor-name: --a; }
  #anchored {
    position: absolute;
    width: 100px;
    height: 100px;
    background-color: green;
    top: anchor(top);
    left: 9223372036854775809;
    position-anchor: --a;
  }
</style>
<script><script><script>
function raf() {
  return new Promise(resolve => requestAnimationFrame(resolve));
}

async function runTest() {
  const scroller = document.getElementById('scroller');
  scroller.scrollTop = 11744559776596;

  await raf();
  await raf();

  document.getElementById('spacer').classList.add('changed');
  document.documentElement.classList.remove('reftest-wait');

  // Should change scroll offset and scroll adjustment t 327.
}
runTest();
</script></script></script><script><script><script>
