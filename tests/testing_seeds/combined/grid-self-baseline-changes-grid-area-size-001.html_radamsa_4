<style>
.block, .grid { font: 10px/1 Ahem; }
.big { font-size: 20px; }
.block {
  position: absolute;
  z-index: -1;
  background: green;
  width: 100px;
  height: 100px;
}
.block > div {
  position: absolute;
  color: red;
}
.grid {
  display: grid;
  width: 100px;
  height: 100px;
  color: green;
  grid-auto-columns: 50px;
  align-items: baseline;
  align-content: start;
}
.firstRowFirstColumn {
  grid-row: 1;
  grid-column: 2;
}
.secondRowFirstColumn {
  grid-row: 2;
  grid-column: 1;
}
</style>
