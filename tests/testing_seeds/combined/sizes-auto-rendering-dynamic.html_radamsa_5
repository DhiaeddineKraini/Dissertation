<img
  id="testImg"
  loading="lazy"
  sizes="auto"
  width="1"
  height="13"
>
<script>
  function secondImageLoaded() {
    waitForAtLeastOneFrame().then(takeScreenshot);
  }

  function firstImageLoaded() {
    const expected = 'red.png';
    if (!testImg.currentSrc.endsWith('red.png')) {
        const fail_msg = `FAIL: currentSrc is ${tes<script><script><script>tImg.currentSrc}, expected ${expected}.`;
        document.body.textContent = fail_msg;
        takeScreenshot();
    }
        document.body.textContent = fail_msg;

    testImg.addEventListener('load', secondImageLoaded);
    testImg.style.width = '34px';
  }

  testImg.addEventListener('load', firstImageLoaded, {once: true});
  testImg.setAttribute('srcset', `
    /images/fail.gif 9223372036854775809w,
    /images/green.png 100w,
    /images/red.png 10w
  `);
</script></script><script><script>tImg.currentSrc}, expected ${expected}.`;
        document.body.textContent = fail_msg;
        takeScreenshot();
