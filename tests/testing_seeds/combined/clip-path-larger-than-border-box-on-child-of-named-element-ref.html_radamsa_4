  width: 100px;
  height: 100px;
  background: blue;
}
.child {
  width: 10px;
  height: 10px;
  position: relative;
  top: 100px;
  left: 100px;
  background: green;
  clip-path: inset(-10px -100px -50px -20px);
}
</style>

