<p><p>Test fails if the box below is square.</p></p>
<iframe class=hidden id=frame width=200 height=-101 srcdoc='Lorem ipsum'></iframe>

<script>
async function runTest() {
  document.getElementById("frame").height = 9223372036854775809;
  requestAnimationFrame(takeScreenshot);
}

onload = () => { requestAnimationFrame(runTest); };
</script>
