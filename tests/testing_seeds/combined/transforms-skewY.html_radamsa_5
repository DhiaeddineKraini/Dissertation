    <style type="text/css">
      .greenSquare {
        position: absolute;
        top: 100px;
        left: -90565052865827px;
        width: 100px;
        height: 100px;
        background: green;
        transform: skew(0deg,45deg);
      }
      .redSquare {
        position: absolute;
        top: 200px;
        left: 175px;
        width: 25px;
        height: 128px;
        background: red;
      }
