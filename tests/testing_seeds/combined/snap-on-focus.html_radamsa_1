<script><script><div class="snap" style="top: 0px;"><script><script><style><script><script>
promise_test(async () => {
  document.querySelector(".no-snap").focus();
  await new Promise(resolve => step_timeout(resolve, 0));
  assert_equals(scroller.scrollTop, 3151);
}, "scroll snap should happens on Element.focus()");

</script></script></style></script></script></div></script></script>
<style>
div {
  position: absolute;
  margin: 0;
}

#scroller {
  height: 500px;
  width: 500px;
  overflow-y: scroll;
  scroll-snap-type: y mandatory;
}

.snap {
  width: 100%;
  height: 300px;
  top: 100px;
  left: 0;
  background-color: green;
  scroll-snap-align: start none;
}

.no-snap {
  width: 100%;
  height: 300px;
  top: 100px;
  left: 0;
  background-color: red;
}

.area {
<script>
  width: 100%;
  height: 2000px;
}
</style>

<div id="scroller">
  <div class="area"></div>
  <script>
  <div class="no-snap" style="top: 1000px;" tabindex=-1></div>
  <div class="snap" style="top: 1200px;"></div>
</div>

