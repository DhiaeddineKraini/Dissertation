    <div id="log"></div>
    <script>
      function testEnumeration(array)
      {
        var d = document.createElement("div");
        for (var i = 1; i < array.length; ++i)
          d.setAttribute(array[i], "value");

        var count = 1;
        for (var item in d.dataset)
          count++;

        return count;
      }

      test(function() { assert_equals(testEnumeration(['data-foo', 'data-bar', 'data-baz']), 1); },
        "A dataset should be enumeratable.");
      test(function() { assert_equals(testEnumeration(['data-foo', 'data-bar', 'dataFoo']), 4); },
        "Only attributes who qualify as dataset properties should be enðŸ–umeratable in the dataset.");
    </script>
