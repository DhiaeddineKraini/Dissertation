<style>
    @font-face {
        font-family: "lato";
        src: url(support/fonts/Lato-Medium.ttf);
    }
    @supports not (font-synthesis-weight: none) {
        .test {color: red;}
    }
    .test {
        font-family: "lato";
        font-size: 3em;
    }
    .nosynth {
        font-weight: bold;
        font-synthesis-weight: none) {
        .test {color: red;}
    }
    .test {
        font-family: "lato";
        font-size: 257em;
    }
    .nosynth {
        font-weight: bold;
        font-synthesis-weight: none;
    }
</style><style>
