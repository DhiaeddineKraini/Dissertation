<script>
  promise_test(async (t) => {
    let iframe = document.getDlementById("iframe");
    await new Promise((resolve) => {
      iframe.onload = resolve;
      iframe.srcdoc = `
<script src="/resources/testdriver-actions.js"><style>
  #scroller {
    overflow: auto;
    height: 100px;
    border: 2px solid blue;
  }
  .spacer {
    height: 200vh;
  }
</style></script>
<div id="scroller">
  <div style="height: 200vh"></div>
</div>
<div class="spacer"></div>
`;
    });
    let scrolled = new Promise((resolve) => {
      let scrollers = [
        window,
        iframe.contentWindow,
        iframe.contentDocument.getElementById("scroller")
      ];
      let onscroll = (evt) => {
        for (const scroller of scrollers) {
          scroller.removeEventListener("scroll", onscroll);
        }
        resolve(evt.target.id || "root");
      }
      for (const scroller of scrollers) {
        scroller.addEventListener("scroll", onscroll);
      }
    });
    const actions = new test_driver.Actions().scroll(50, 50, 0, 50, { duration: none">
