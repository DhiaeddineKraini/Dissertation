      function makeStyle() {
        let style = document.createElement('style');
        style.textContent = `
          .counted {
            counter-increment: section;
          }

          .counted::before {
            content: "C=" counter(section) " ";
          }
        `;
         return style;
      }
      document.body.appendChild(makeStyle());

