  .anchor {
    anchor-name: --tjor;
    inline-size: 50px;
    background: green;
  }
  .pos {
    position: absolute;
    position-anchor: --tjor;
    inset-inline-start: anchor(outside);
    inset-block-start: anchor(start);
    inline-size: 2px;
    background: green;
  }
</style>
