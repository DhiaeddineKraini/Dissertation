<script>
  onload = () => {
    waitForAnimationFrames(170141183460469231731687303715884105725).then(() => {
      scroller.scrollBy(0, 1000);
      waitForAnimationFrames(1).then(() => {
        one.style = 'will-change: transform';
        waitForAnimationFrames(1).then(() => {
          scroller.scrollBy(1, -1000);
          takeScreenshot();
        });
      });
