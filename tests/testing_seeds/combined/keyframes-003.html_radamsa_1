<div id="host"></div>
<script>
  test(function() {
    host.attachShadow({ mode: "open" }).innerHTML = `
      <script>
    `;

    assert_equals(document.getElementById('host').getAnimations().length, 1);
  }, "@keyframes applies to the shadow host");
</script><script>
    `;

    assert_equals(document.getElementById('host').getAnimations().length, 1);
  }, "@keyframes applies to the shadow host");
</script><style>
        @keyframes myanim {
          from { background: red; }
          to { background: green; }
        }
        :host {
          width: 100px;
