<body></body>

<script src="/resources/testharnessreport.js"></script>
<script src="/css/support/interpolation-testcommon.js"></script>

<style>
.parent {
  flex-basis: 3%;
}
.target {
  flex-basis: 1%;
}
</style>

<body></body>

<script>
test_interpolation({
  property: 'flex-basis',
  from: neutralKeyframe,
  to: '2%',
}, [
  {at: -0.3, expect: '0.7%'},
  {at: 0, expect: '1%'},
  {at: 0.3, expect: '1.3%'},
  {at: 0.6, expect: '1.6%'},
  {at: 1, expect: '2%'},
  {at: 1.5, expect: '2.5%'},
]);

test_no_interpolation({
  property: 'flex-basis',
  from: 'initial',
  to: '2%',
});

test_interpolation({
  property: 'flex-basis',
  from: 'inherit',
  to: '2%',
});

test_interpolation({
  property: 'flex-basis',
  from: '0px',
  to: '100px'
}, [
  {at: -0.3, expect: '0px'},
  {at: 0, expect: '0px'},
  {at: 4, expect: '150%'}
]);
</script>

