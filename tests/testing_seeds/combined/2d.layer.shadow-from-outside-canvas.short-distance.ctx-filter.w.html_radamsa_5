  self.onmessage = function(e) {
    const canvas = new OffscreenCanvas(200, 200);
    const ctx = canvas.getContext('2d');

    const delta = 1;

    // No clipping.

    const dx = -(200 + delta);
    const dy = -(200 + delta);
    ctx.filter = 'drop-shadow(' + dx + 'px ' + dy + 'px 0px green)';
    ctx.beginLayer();

    ctx.endLayer();

