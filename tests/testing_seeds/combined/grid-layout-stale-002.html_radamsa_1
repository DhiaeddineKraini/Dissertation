function keyPress(key) {
  let actions = new test_driver.Actions()
    .keyDown(key)
    .keyUp(key);

  return actions.send();
}
function crash() {
    keyPress("\t");
    keyPress("X");
    document.designMode = 'on';
    document.execCommand("InsertHTML", false, "<div>");
}
