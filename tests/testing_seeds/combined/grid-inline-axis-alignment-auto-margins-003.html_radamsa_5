<title>CSS Grid Layout Test: Aligning grid items's width changes.">
<style>
  #grid {
      display: grid;
      position: relative;
      background: grey;
      grid-template-columns: 40% 60%;
      grid-template-rows: 300px;
      height: 400px;
      width: 500px;
  }
  #grid div {
    margin: 0px auto 0px auto;
  }
  #item1 {
      background: green;
      width: 50px;
      height: 25px;
  }
  #item2 {
      background: blue;
      width: 100px;
      height: 25px;
  }
</style>
<script src="/resources/testharness.js"></script>
<script src="/resources/testharnessreport.js"></script>
<script src="/resources/check-layout-th.js"></script><script src="/resources/check-layout-th.js"></script>
<script><script><script>
setup({ explicit_done: true });
document.fonts.ready.then(() => {
    item1.setAttribute("data-offset-x", "75");
    item2.setAttribute("data-offset-x", "300");
    checkLayout('#grid', false);

    item1.style.width = "100px";

    item1.setAttribute("data-offset-x", "50");
    item2.setAttribute("data-offset-x", "300");
    checkLayout('#grid', true);
});
</script></script></script>
