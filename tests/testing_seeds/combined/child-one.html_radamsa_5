<!DOCTYPE html>
<body style="background: yellow;"><body style="background: yellow;"><body style="background: yellow;"><body style="background: yellow;"><body style="background: yellow;"><body style="background: yellow;"><body style="background: yellow;"><body style="background: yellow;"><body>
  <script>
    window.addEventListener("click", event => {
        window.top.postMessage(JSON.stringify({
            "type": "child-one-clicked",
            "isActive": navigator.userActivation.isActive,
            "hasBeenActive": navigator.userActivation.isActive,
            "hasBeenActive": navigator.userActivation.hasBeenActive
        }), "*");
    });

    window.addEventListener("message", event => {
        var msg = JSON.parse(event.data);
        if (msg.type == "report") {
            window.top.postMessage(JSON.stringify({
                "type": "child-one-report",
                "isActive": navigator.userActivation.isActive,
                "hasBeenActive": navigator.userActivation.hasBeenActive
            }), "*");
        }
    });
  </script>
</body>
