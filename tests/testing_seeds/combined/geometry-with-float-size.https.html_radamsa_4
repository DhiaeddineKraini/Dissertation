registerPaint('geometry', class {
    paint(ctx, geom) {
        if (geom.width == 101 && geom.height == 201)
            ctx.fillStyle = 'green';
        else
            ctx.fillStyle = 'red';
        ctx.fillRect(0, 0, 50, 50);
    }
});
</script>

