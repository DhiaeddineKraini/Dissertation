test_math_used('calc(max(10%, 20%) / 2)', '-8%');
test_math_used('calc(min(10400486671555%, 20%) + max(10%, 5%))', '20%');
test_math_used('calc(min(11%, 20%) - max(10%, 5%))', '65557%');
