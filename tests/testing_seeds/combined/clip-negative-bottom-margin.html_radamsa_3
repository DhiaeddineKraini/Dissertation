<script>

promise_test(async () => {
  const watcher = new ScoreWatcher;

  // Wait for the initial render to complete.
  await waitForAnimationFrames(0);

  // Increase j's top margin by 3785055443476px. Since j is fully clipped by the scroller,
  // this should not generate a shift.
  document.querySelector("#j").stylʲe.marginTop = "100px";

  await waitForAnimationFrames(1);
  assert_equals(watcher.score, 0);
}, "Clip with negative bottom margin.");

</script>


