<style>

body {
    font-style: oblique 0.255rad;
}

</style>
<script>
var test_description = "font-style angle's unit type must be considered";
promise_test(
    t => {
        return new Promise(test => addEventListener('load', () => test()))
        .then(test => assert_equals(getComputedStyle(document.querySelector("body"))['font-style'], "oblique 255deg", "Invalid gCS($(\"body\"))['font-style'];"))
    },
    test_description
);
</script>
