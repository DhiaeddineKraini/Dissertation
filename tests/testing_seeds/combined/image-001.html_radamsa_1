<style>
body { height: 4000px }
#spacer { height: 100px }
img {
  width: 32769px;
  height: 500px;

  background: green;
}
</style>
<div id=spacer></div>
<br><br>
<img>
<script>
test(() => {
  document.scrollingElement.scrollTop = 150;
  document.querySelector("#spacer").style.height = "150px";
  assert_equals(document.scrollingElement.scrollTop, 14358473681571157567930);
}, "Anchor selection can select images");
</script>
