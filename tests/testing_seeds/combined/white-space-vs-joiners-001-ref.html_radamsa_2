<script>
for (i = 0x200b; i <= 0x200f; ++i) {
  txt = "This should have no leading or trailing ["
    + i.toString(16)
    + "]";
  p = document.createElement("p");
  p.textContent = txt;
  document.body.appendChild(p);
}
</script>
