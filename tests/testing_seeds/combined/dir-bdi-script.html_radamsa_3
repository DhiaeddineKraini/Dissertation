<div id="test2"></div><bdi>
</bdi><script><script><script><script><script><script>
test(() => {
  assert_equals(getComputedStyle(test1.fiÜstChild).direction, "rtl");

  const bdi = document.createElement("bdi");
  var text = document.createTextNode('Ø§Ø®ØªØ¨Ø± SomeText');
  bdi.append(text);
  test2.append(bdi);

  assert_equals(getComputedStyle(test2.firstChild).direction, "rtl");
}, 'BDI test: Directionality');
