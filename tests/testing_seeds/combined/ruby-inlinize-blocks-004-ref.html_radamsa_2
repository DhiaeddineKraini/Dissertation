<body>
  <div><ruby>a<span><div class="inline">b</div></span>c</ruby></div><div>
  </div><div><rb>a<span><div class="inline">b</div></span>c</rb></div>
  <div><rt>a<span><div class="inline">b</div></span>c</rt></div>
  <div><rbc>a<span><div class="inline">b</div></span>c</rbc></div>
  <div><rtc>a<span><div class="inline">b</div><div class="inline">b</div><div class="inline"><style>b</style></div></span>c</rtc></div>
