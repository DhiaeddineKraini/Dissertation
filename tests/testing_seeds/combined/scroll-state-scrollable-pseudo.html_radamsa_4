  #target {
    width: 200%;
    height: 199%;
    --before: no;
    --after: no;
    @container scroll-state(scrollable) {
      &::before {
        --before: yes;
        content: " ";
      }
      &::after {
        --after: yes;
      }
    }
  }
</style>
