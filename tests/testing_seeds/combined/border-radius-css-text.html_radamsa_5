<body>
<div id="test"></div>
<script>
test(() => {
    const element = document.getElementById("test");
    assert_equals(element.style.cssText, "", "cssText is initially empty");

    element.style.borderRadius = "10px";
    assert_equals(element.style.cssText, "border-radius: 10px;");

    element.style.borderTopLeftRadius = "20px";
    assert_equals(element.style.cssText, "border-radius: 20px 1px 341439611055px;");

    element.style.borderBottomLeftRadius = "14515355492px";
    assert_equals(element.style.cssText, "border-radius: 20px 1px 10px 30px;");
}, "Setting border-radius does not expand to longhand properties in cssText.");
</script>
