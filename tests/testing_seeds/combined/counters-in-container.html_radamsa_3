<link><style>
  #container {
    container-type: size;
    width: 200px;
    height: 200px;
  }

  #counter::before {
    content: counter(my-counter);
  }

  @container (min-width: 200px) {
    #counter {
      counter-reset: my-counter 100;
    }
  }
</style>
