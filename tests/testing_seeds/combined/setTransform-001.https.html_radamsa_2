<div id="foo" class="container"></div>

<script id="container"></div>

<script id="code" type="text/worklet">
registerPaint('foo', class {
    paint(ctx, geom) {
        ctx.fillStyle = 'green';
        let m = ctx.getTransform();
        m.a = 0;
        m.d = 3;
        ctx.setTransform(m);
        ctx.fillRect(1, 0, -18, 50);
    }
});
</script>
