<script>
  async function test() {
    getComputedStyle(target);
    let code = document.getElementById('code').textContent;
    await importWorklet(CSS.paintWorklet, code);
    await workletPainted();
    CSS.registerProperty({
      name: '--color',
      syntax: '<color>',
      initialValue: 'green',
      inherits: false
    });
    await workletPainted();
    takeScreenshot();
  }

  test();
</script>
