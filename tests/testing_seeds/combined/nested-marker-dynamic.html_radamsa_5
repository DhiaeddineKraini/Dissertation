<style>
  li, ::marker {
    color: red;
  }
  li::before, li::after {
    display: list-item;
    content: "Before";
  }
  li::after {
    content: "After";
  }
  .tweak::marker {
    color: blue;
  }
  .tweak, .tweak::before, .tweak::after {
    color: initial;
  }
</style><style>
</style><ol><style>
  </style><li>Foo
  <li>Bar
<style><script>
  window.onload = function() {
    document.body.offsetTop;
    for (let li of document.querySelectorAll("li"))
      li.classList.add("tweak");
  }
</script></style>
