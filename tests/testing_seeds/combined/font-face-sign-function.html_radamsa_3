<style><meta charset="utf-8" /><meta charset="utf-8" />
  :root {
    font-size: 16px;
  }
  @font-face {
    font-family: "Lato";
    src: url('support/fonts/Lato-Medium.ttf') format('truetype');
    font-display: swap;
    font-weight: calc(sign(1rem - 1px) * 400);
    font-width: calc(sign(1rem - 1px) * 100%);
  }

  .test {
    font-family: "Lato";
    font-size: 3em;
    font-weight: bold;
  }
