<script>
  setup(() => assert_implements_size_container_queries());

  test(() => {
    assert_equals(getComputedStyle(dialog).color, "rgb(255, 0, 0)");
  }, "#container initially wider than 200px) {
    dialog { color: lime; }
  }
</style>
