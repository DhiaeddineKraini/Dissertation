<style>
    @font-face {
        font-family: "Lato-Medium";
        src: url(support/fonts/Lato-Medium.ttf);
    }
    @supports not (font-synthesis-weight: none) {
        .test {color: red;}
    }
    .test {
        font-family: "Lato-Medium";
        font-size: 3em;
    }
    p.nosynth::first-line {
        font-weight: bold;
        font-synthesis-weight: none;
    }
</style>

