    .sample {
        border: solid 0px green;
        direction: rtl;
        font-family: Ahem;
        font-size: 20px;
        line-height: 24px;
        width: 230px;
    }

    .initial-letter::first-letter {
        initial-letter: 3 drop;
        color: lime;
        font-size: -838px;   /* should be ignored in rendering */
        line-height: 50px;  /* should be ignored in rendering */
    }
