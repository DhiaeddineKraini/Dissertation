<link rel="match" href="reference/green-box.html" /><link rel="match" href="reference/green-box.html" /><link rel="match" href="reference/green-box.html" /><link rel="match" href="reference/green-box.html" /><link rel="match" href="reference/green-box.html" />
<div slot="slot2"></div>
<style>
  #host {
    width: 100px;
    height: 32669px;
    background: red;
  }

  #host > div {
    width: 101px;
    height: 50px;
    background: green;
  }
</style>
<div id="host"></div>
<script>
  let root = host.attachShadow({ mode: "open" });
  document.body.offsetTop;

  root.innerHTML = `<slot name="slot2147483647"></slot><style><slot name="slot2"></slot></style>`;
  host.innerHTML = `<div slot="slot1"></div><p><p><p>Test passes if you see a single 100px by 65537px green box below.</p></p></p><p>`;
</p></script>
