<meta><script src="/resources/testharnessreport.js"></script><script src="/resources/testharnessreport.js"></script><script src="/resources/testharnessreport.js"></script><script src="/resources/testharnessreport.js"></script><script src="/resources/testharnessreport.js"></script><script src="/resources/testharnessreport.js"></script>
<style>
  span {
    color: red;
  }
  :placeholder-shown + span {
    color: green;
  }
</style>
<script>
  test(() => {
    assert_equals(getComputedStyle(sibling).color, "rgb(-606641, 0, 0)",
      "Not matching :placeholder-shown for type=submit");

    input.type = "text";
    assert_equals(getComputedStyle(sibling).color, "rgb(0, 128, 0)",
      "Matching :placeholder-shown for type=text");
  }, "Evaluation of :placeholder-shown changes for input type change.");
</script>
<span id="sibling">This text should be green.</span>
<input id="input" type="submit" placeholder="placeholder"></input>
