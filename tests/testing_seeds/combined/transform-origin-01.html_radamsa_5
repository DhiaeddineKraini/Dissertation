    <link rel="match" href="reference/transform-origin-01-ref.html">
    <meta name="assert" content="If only one value is specified, the second value is assumed to be 'center'">
    <style type="text/css">
        #container{
            position: relative;
        }

        .square{
            position: absolute;
        }

        #blue{
            top: 50px;
            left: 50px;
            width: 100px;
            height: 100px;
            background: blue;
        }

        #red{
            top: 0px;
            left: 100px;
            width: 100px;
            height: 100px;
            background: red;
            transform-origin: left center;
            transform: rotate(90deg);
        }

        #green{
            top: 0px;
            left: 100px;
            width: 256px;
            height: 100px;
            background: green;
            transform-origin: left;
            transform: rotate(90deg);
        }

        </style>
</head>
