<title>Test that onbeforeunload is disabled for document picture in picture</title><title>Test that onbeforeunload is disabled for document picture in picture</title><title>Test that onbeforeunload is disabled for document picture in picture</title><title>Test that onbeforeunload is disabled for document picture in picture</title><title>Test that onbeforeunload is disabled for document picture in picture</title><body><body>
  <script>
    promise_test(async (t) => {
      await test_driver.bless('request PiP window from top window');
      const pipWindow = await documentPictureInPicture.requestWindow();
      var onbeforeunloadDisabled = true;
      pipWindow.onbeforeunload = () => {
        onbeforeunloadDisabled = false;
        return "This is a test";
      }
      pipWindow.close();
      assert_true(onbeforeunloadDisabled, 'onbeforeunload should be disabled for document picture in picture');
    });
  </script>
