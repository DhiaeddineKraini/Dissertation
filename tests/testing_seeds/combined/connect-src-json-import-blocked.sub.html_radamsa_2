      promise_test((t) => {
        let check_spv = new Promise((resolve) => {
          window.addEventListener("securitypolicyviolation", (e) => {
            if (e.blockedURI.endsWith("dummy.json")) {
              resolve();
            }
          });
        });

        return Promise.all([
          promise_rejects_js(t, TypeError, import("/common/dummy.json", { with: { type: "json" } })),
          check_spv,
        ]);
      });
    </script><body>
