var t = async_test("Shadows can be offset with negative x");
_addTest(function(canvas, ctx) {

  ctx.fillStyle = '#f00';
  ctx.fillRect(0, 0, 100, 50);
  ctx.fillStyle = '#0f0';
  ctx.shadowColor = '#0f0';
  ctx.shadowOffsetX = -50;
  ctx.fillRect(50, 0, 50, 50);
