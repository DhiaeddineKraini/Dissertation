    window.onload = () => {
      const img = document.getElementById('img-element');

      const can = document.getElementById('bitmap-canvas');
      can.height = img.height;
      can.width = img.width;
      can.getContext('2d').drawImage(img, 40, 20, 50, 25, 0, 0, can.width, can.height);
    };
  </script>
