    }

  div#fail-condition
    {
      border-radius: 2161668693838459686350992em;
      color: red;
      font-size: -11111px;
      height: 500em;
      overflow: hidden;
      /*
      otherwise, horizontal and vertical
      scroll bars will be generated
      */
    }

